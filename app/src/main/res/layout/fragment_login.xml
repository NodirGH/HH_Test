<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".ui.auth.LoginFragment">

    <TextView
        android:id="@+id/tvLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/DefaultMarginSize"
        android:layout_marginTop="64dp"
        android:fontFamily="@font/ssf_pro_display_medium"
        android:text="@string/Login"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/DefaultMarginSize"
        android:layout_marginTop="400dp"
        android:background="@drawable/bg_dark_grey"
        android:orientation="vertical"
        android:padding="@dimen/DefaultMarginSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvLogin">

        <TextView
            android:id="@+id/tvSearchWork"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/DefaultHalfMarginSize"
            android:fontFamily="@font/sf_pro_display_regular"
            android:text="@string/SearchWork"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/DefaultHalfMarginSize"
            android:background="@drawable/bg_light_grey"
            android:fontFamily="@font/sf_pro_display_regular"
            android:padding="@dimen/DefaultHalfMarginSize"
            android:textColor="@color/white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/DefaultMarginSize"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvBtnContinue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bg_button_blue"
                android:fontFamily="@font/sf_pro_display_regular"
                android:gravity="center"
                android:paddingVertical="11dp"
                android:text="@string/Continue"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvBtnLoginWithPassword"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/DefaultHalfMarginSize"
                android:layout_weight="1"
                android:fontFamily="@font/sf_pro_display_regular"
                android:gravity="center"
                android:paddingVertical="11dp"
                android:text="@string/LoginWithPassword"
                android:textColor="@color/blue_button"
                android:textSize="14sp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/DefaultMarginSize"
        android:layout_marginTop="400dp"
        android:background="@drawable/bg_dark_grey"
        android:orientation="vertical"
        android:padding="@dimen/DefaultMarginSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvLogin">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/DefaultHalfMarginSize"
            android:fontFamily="@font/ssf_pro_display_medium"
            android:text="@string/SearchEmployer"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/DefaultHalfMarginSize"
            android:fontFamily="@font/sf_pro_display_regular"
            android:text="@string/AccessToBase"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvBtnLookingEmployees"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_button_green"
            android:text="@string/LookingForEmployees"
            android:fontFamily="@font/sf_pro_display_regular"
            android:textSize="14sp"
            android:layout_marginTop="@dimen/DefaultMarginSize"
            android:textColor="@color/white"
            android:gravity="center"
            android:paddingVertical="4dp"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>