<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="120dp"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:layout_marginEnd="@dimen/DefaultHalfMarginSize"
    android:background="@drawable/bg_dark_grey"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ivIcon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/bg_oval_dark_green"
        android:src="@drawable/ic_location"
        app:tint="@color/light_green"
        android:padding="6dp"/>

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="52dp"
        android:maxLines="3"
        android:fontFamily="@font/ssf_pro_display_medium"
        android:ellipsize="end"
        android:layout_marginTop="12dp"
        android:text="@string/VerifyInfo"
        android:textColor="@color/white"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/tvRaise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:visibility="invisible"
        android:ellipsize="end"
        android:text="@string/Raise"
        android:textColor="@color/primary_green"
        android:textSize="14sp"/>

</LinearLayout>