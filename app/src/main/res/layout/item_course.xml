<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:elevation="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/ItemCourseBg"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="124dp"
            android:background="@drawable/temp_picture"
            android:elevation="12dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="12dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/ivCoursePicture"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@null"
                    android:scaleType="centerCrop"
                    android:src="@drawable/temp_picture" />

                <ImageView
                    android:id="@+id/ivFavorite"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_alignParentEnd="true"
                    android:layout_margin="8dp"
                    android:background="@drawable/bg_oval_transparent"
                    android:padding="8dp"
                    android:src="@drawable/ic_bookmark" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="8dp"
                    android:layout_marginStart="8dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/llStar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_rectangle_transparent"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingHorizontal="6dp"
                        android:paddingVertical="4dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_star" />

                        <TextView
                            android:id="@+id/tvRating"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:fontFamily="@font/roboto_regular_400"
                            android:textColor="@color/MainWhite"
                            android:textSize="12sp"
                            tools:text="4.9" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:background="@drawable/bg_rectangle_transparent"
                        android:fontFamily="@font/roboto_regular_400"
                        android:paddingHorizontal="6dp"
                        android:paddingVertical="4dp"
                        android:textColor="@color/MainWhite"
                        android:textSize="12sp"
                        tools:text="22 Мая 2024" />
                </LinearLayout>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tvCourseTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/roboto_medium_500"
            android:paddingHorizontal="16dp"
            android:textColor="@color/MainWhite"
            android:textSize="16sp"
            tools:text="Java-разработчик с нуля" />

        <TextView
            android:id="@+id/tvCourseDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:ellipsize="end"
            android:fontFamily="@font/roboto_regular_400"
            android:maxLines="2"
            android:paddingHorizontal="16dp"
            android:textColor="@color/MainWhite"
            android:textSize="12sp"
            tools:text="Освой профессию 3D-дженералиста и стань универсальным специалистом, который умеет" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:paddingHorizontal="16dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/roboto_medium_500"
                android:textColor="@color/MainWhite"
                android:textSize="16sp"
                tools:text="12 000 ₽" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/tvMore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/roboto_regular_400"
                android:textStyle="bold"
                android:textColor="@color/MainGreen"
                android:textSize="14sp"
                android:text="@string/More" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow_more"
                android:layout_gravity="bottom|center"
                android:layout_marginStart="4dp"/>


        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>